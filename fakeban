import discord
from discord.ext import commands
from .utils.dataIO import fileIO

class Fakeban:
    """Fake Ban A User!"""

    def __init__(self, bot):
        self.bot = bot

    @commands.command(pass_context=True, invoke_without_command=True)
    async def bban(self, ctx, *, user: discord.Member):
        """Fake Ban a user!"""
        sender = ctx.message.author
        if ctx.message.author == user:
            await self.bot.say(sender.mention + " You cant ban your self! ")
        else:
            await self.bot.say(user.mention + " was banned by " + sender.mention + "! ",)
        



def setup(bot):
    bot.add_cog(Fakeban(bot))
